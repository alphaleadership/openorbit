#version 150

uniform mat4 oo_ModelViewMatrix;
uniform mat4 oo_ProjectionMatrix;

in vec4 oo_Vertex;
in vec2 oo_TexCoord0;
in vec4 oo_Color;

out vec4 FragColor;
out vec2 FragTexCoord;

void
main()
{
  gl_Position = oo_ProjectionMatrix * oo_ModelViewMatrix * oo_Position;
  FragColor = oo_Color;
  FragTexCoord = oo_TexCoord0;
}
