#version 150

uniform mat4 ModelViewMatrix;
uniform mat4 ProjectionMatrix;

in vec4 Position;
in vec2 TexCoord;
in vec4 VertexColor;

out vec4 FragColor;
out vec2 FragTexCoord;

void
main()
{
  gl_Position = ProjectionMatrix * ModelViewMatrix * Position;
  FragColor = VertexColor;
  FragTexCoord = TexCoord;
}
